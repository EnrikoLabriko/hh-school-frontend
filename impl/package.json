{
  "name": "hh-calendar",
  "description": "Calendar that keeps events",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/vpavlenko/hh-school-frontend.git"
  },
  "dependencies": {
    "browserify": "^8.0.3",
    "less": "^2.2.0"
  },
  "devDependencies": {
    "catw": "^0.2.0",
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-jshint": "^0.10.0",
    "grunt-contrib-less": "^1.0.0",
    "grunt-contrib-watch": "^0.6.1",
    "less-plugin-autoprefix": "^1.1.0",
    "less-plugin-clean-css": "^1.4.0",
    "watchify": "^2.2.1"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc -' 'less/*.less' -o dist/bundle.css -v",
    "watch": "npm run watch-css",
    "build-css": "catw -c 'lessc -' 'style/*.less' > dist/bundle.css",
    "build": "npm run build-css"
  }
}
